<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>articleTypeServlet</servlet-name>
		<servlet-class>com.xfashion.server.ArticleTypeServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>imageUploadServlet</servlet-name>
		<servlet-class>com.xfashion.server.img.ImageUploadServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>userServlet</servlet-name>
		<servlet-class>com.xfashion.server.user.UserServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>sticker</servlet-name>
		<servlet-class>com.xfashion.pdf.Sticker</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>imageupload</servlet-name>
		<servlet-class>com.xfashion.server.img.ImageUploadServlet</servlet-class>
	</servlet>
  
	<servlet>
		<servlet-name>showimage</servlet-name>
		<servlet-class>com.xfashion.server.img.ShowImage</servlet-class>
	</servlet>
  
  	<servlet-mapping>
		<servlet-name>articleTypeServlet</servlet-name>
		<url-pattern>/xfashion/articleTypeService</url-pattern>
	</servlet-mapping>

  	<servlet-mapping>
		<servlet-name>imageUploadServlet</servlet-name>
		<url-pattern>/xfashion/imageUploadService</url-pattern>
	</servlet-mapping>

  	<servlet-mapping>
		<servlet-name>userServlet</servlet-name>
		<url-pattern>/xfashion/userService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>sticker</servlet-name>
		<url-pattern>/pdf/sticker</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>imageupload</servlet-name>
		<url-pattern>/img/imageupload</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>showimage</servlet-name>
		<url-pattern>/img/showimage</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Xfashion.html</welcome-file>
	</welcome-file-list>

</web-app>
